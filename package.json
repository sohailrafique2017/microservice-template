{
  "name": "sporday-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start  --debug --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/sporday-backend/main",
    "start:users": "nest start users --debug --watch",
    "start:catalog": "nest start catalog",
    "start:discount": "nest start discount-promotion",
    "start:notifications": "nest start notifications",
    "start:orders": "nest start orders",
    "start:all": "concurrently \"nest start api-gateway\" \"nest start users\" \"nest start catalog\" \"nest start discount-promotion\" \"nest start notifications\" \"nest start orders\"",
    "build:all": "concurrently \"nest build api-gateway\" \"nest build users\" \"nest build catalog\" \"nest build discount-promotion\" \"nest build notifications\" \"nest build orders\"",
    "migration:generate": "rimraf dist && tsc -p tsconfig.build.json && npx typeorm-ts-node-commonjs migration:generate -d ./ormconfig.ts libs/database/src/migrations/$npm_config_name",
    "migration:create": "rimraf dist && tsc -p tsconfig.build.json && typeorm migration:create libs/database/src/migrations/$npm_config_name",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./ormconfig.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky",
    "test": "jest --verbose",
    "test:clear": "jest --clearCache",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/sporday-backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.4.4",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "jwt-decode": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.0",
    "run": "^1.5.0",
    "rxjs": "^7.8.1",
    "start": "^5.1.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/api-gateway(.*)$": "<rootDir>/apps/api-gateway/src/$1",
      "^@app/users(.*)$": "<rootDir>/apps/users/src/$1",
      "^@app/catalog(.*)$": "<rootDir>/apps/catalog/src/$1",
      "^@app/notifications(.*)$": "<rootDir>/apps/notifications/src/$1",
      "^@app/discount-promotion(.*)$": "<rootDir>/apps/discount-promotion/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/contract(|/.*)$": "<rootDir>/libs/contract/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1"
    }
  }
}